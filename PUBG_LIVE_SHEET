      object-fit: cover;
      border-radius: 50%;
      margin-right: 10px;
    }
    .group-header {
      background-color: #2c3e50;
      color: white;
      text-align: center;
      font-weight: bold;
    }
    .logo-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
    }
