<body>
  <div class="logo-container">
    <img src="F:\Akiakane\WORK\LANIT PUBG\Банер 1 без фона.png" alt="Логотип турнира" class="logo">
  </div>
  <h1>PUBG Europe Contenders</h1>
  <div id="table"></div>

  <script>
    const googleSheetUrl = 'https://docs.google.com/spreadsheets/d/10mJj4_VTawZQN9ijcncl7wK0UZVHFN9yz5cVD_oQba0/edit?gid=0#gid=0&range=B5:E17';

    fetch(googleSheetUrl)
      .then(res => res.text())
      .then(data => {
        const json = JSON.parse(data.match(/.*\((.*)\)/)[1]);
        const table = document.createElement('table');
        const tr = document.createElement('tr');

        // Создаем заголовки
        tr.innerHTML = `
          <th class="group-header">STANDINGS GROUP A</th>
          <th class="group-header">TOTAL PTS</th>
          <th class="group-header">STANDINGS GROUP B</th>
          <th class="group-header">TOTAL PTS</th>
        `;
        table.appendChild(tr);

        // Разделяем данные на две группы
        const groupA = [];
        const groupB = [];
        json.table.rows.forEach(row => {
          if (row.c[0].v % 2 === 0) { // Простой способ разделить на группы
            groupA.push(row);
          } else {
            groupB.push(row);
          }
        });

        // Создаем строки для каждой группы
        for (let i = 0; i < Math.max(groupA.length, groupB.length); i++) {
          const tr = document.createElement('tr');

          // Группа A
          const cellA = groupA[i];
          if (cellA) {
            tr.innerHTML += `
              <td>${cellA.c[0].v}</td>
              <td><img src="${cellA.c[2].v}" alt="Логотип">${cellA.c[1].v}</td>
              <td>${cellA.c[3].v}</td>
            `;
          } else {
            tr.innerHTML += `<td></td><td></td><td></td>`;
          }

          // Группа B
          const cellB = groupB[i];
          if (cellB) {
            tr.innerHTML += `
              <td>${cellB.c[0].v}</td>
              <td><img src="${cellB.c[2].v}" alt="Логотип">${cellB.c[1].v}</td>
              <td>${cellB.c[3].v}</td>
            `;
          } else {
            tr.innerHTML += `<td></td><td></td><td></td>`;
          }

          table.appendChild(tr);
        }

        document.getElementById('table').appendChild(table);
      });
  </script>
</body>
